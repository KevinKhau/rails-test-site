<div class="header">
  <div class="container">
    <%= image_tag ("ticket_logo.svg"), class: "img-responsive", height: 50 %>
    <h1>Tickets</h1>
  </div>
</div>

<div class="tickets">
  <div class="container">
    <% @tickets.each do |ticket| %>
      <%= link_to 'Show Ticket', "tickets#show" %>
      <div class="ticket">
        <p class="title"><%= ticket.title %></p>
        <p class="nb_comments"><%= ticket.comments.size %></p>
        <p class="time">Créé le : <%= ticket.created_at.strftime("%F %T") %></p>
      </div>
    <% end %>
  </div>
</div>
