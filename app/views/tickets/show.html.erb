<div class="main ticket-show">
  <div class="container">
    <div class="ticket">

      <div class="close">
        <%= link_to 'Fermer ce ticket', ticket_close_path, method: 'patch' %>
      </div>

      <div class="info">
        <h3 class="ticket-title"><%= @ticket.title %></h3>
        <p class="ticket-description"><%= @ticket.description %></p>
        <p class="ticket-manager">Responsable : <%= @ticket.manager.first_name %> <%= @ticket.manager.last_name %></p>
      </div>
    </div>

    <h2>Commentaires (<%= @comments.size %>) :</h2>
    <% @comments.each do |comment| %>
      <div class="comment">
        <h3 class="comment-author"><%= comment.user.first_name %> <%= comment.user.last_name %></h3>
        <p class="comment-content"><%= comment.content %></p>
        <p class="comment-created-at"><%= comment.created_at.strftime("%F %T") %></p>
      </div>
    <% end %>
    <%= link_to 'Ajouter un commentaire', ticket_comment_path(@ticket), :action => 'update', :ticket => @ticket %>
  </div>
</div>